{
  "name": "flashcard-extension-2",
  "version": "0.0.1",
  "scripts": {
    "clean": "rimraf dist",
    "build": "webpack --config webpack.config.js --mode production",
    "dev": "npm run clean && webpack --config webpack.config.mjs --mode development --watch",
    "web-ext": "web-ext run --devtools --firefox-profile default-release --source-dir ./dist",
    "nuke": "rimraf node_modules && npm install"
  },
  "dependencies": {
    "dompurify": "^3.1.6",
    "marked": "^11.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@types/dompurify": "^3.0.5",
    "@types/firefox-webext-browser": "^120.0.4",
    "@types/marked": "^5.0.2",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^6.8.1",
    "rimraf": "^5.0.5",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  }
}
